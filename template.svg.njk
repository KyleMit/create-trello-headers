<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 810 355"
  width="810" height="355">
  <defs>
    <linearGradient id="myGradient" gradientTransform="rotate(90)">
      <stop offset="0%"  stop-color="{{color}}" />
      <stop offset="70%"  stop-color="{{color}}" />
      <stop offset="100%" stop-color="white" />
    </linearGradient>
  </defs>
  <style>
   @font-face {
    font-family: 'Ubuntu';
    font-style: normal;
    font-weight: 500;
    font-display: swap;
    src: url(https://fonts.gstatic.com/s/ubuntu/v15/4iCv6KVjbNBYlgoCjC3jsGyN.woff2) format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }
  </style>
  <rect width="100%" height="100%" fill="url('#myGradient')"/>
  <text x="50%" y="40%"
        dominant-baseline="middle"
        text-anchor="middle"
        fill="white"
        style="font-family: 'Ubuntu', sans-serif; font-size: 72px; font-weight: 500">
        {{title}}
  </text>
</svg>
